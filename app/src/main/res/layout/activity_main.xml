<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Calculator" />

    <EditText
        android:layout_below="@+id/textView"
        android:hint="0.0"
        android:inputType="number"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:layout_gravity="end"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/ic_launcher_background"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:textStyle="bold"
            android:layout_toRightOf="@id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:textStyle="bold"
            android:layout_toRightOf="@id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:textStyle="bold"
            android:layout_below="@id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:textStyle="bold"
            android:layout_below="@id/btn8"
            android:layout_toRightOf="@id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:textStyle="bold"
            android:layout_below="@id/btn9"
            android:layout_toRightOf="@id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:textStyle="bold"
            android:layout_below="@id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:textStyle="bold"
            android:layout_below="@id/btn5"
            android:layout_toRightOf="@id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:textStyle="bold"
            android:layout_below="@id/btn6"
            android:layout_toRightOf="@id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:textStyle="bold"
            android:layout_below="@id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnPeriod"
            android:text="."
            android:textStyle="bold"
            android:layout_below="@id/btn2"
            android:layout_toRightOf="@id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnAdd"
            android:text="+"
            android:textStyle="bold"
            android:layout_below="@id/btn3"
            android:layout_toRightOf="@id/btnPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnMultiply"
            android:text="*"
            android:textStyle="bold"
            android:layout_toRightOf="@id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnSubtract"
            android:text="-"
            android:textStyle="bold"
            android:layout_below="@id/btnMultiply"
            android:layout_toRightOf="@id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnDivide"
            android:text="/"
            android:textStyle="bold"
            android:layout_below="@id/btnSubtract"
            android:layout_toRightOf="@id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnEqual"
            android:text="="
            android:textStyle="bold"
            android:layout_below="@id/btnDivide"
            android:layout_toRightOf="@id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>